# Daily Greeting Configuration
# Copy this file to config.ini and customize for your environment
# config.ini is gitignored and won't be committed

# weather.gov API setup
[weather]
lat = 42.27
lon = -71.81
user_agent = DailyGreeting/1.0

# Ollama server configuration
[ollama]
base_url = http://192.168.1.134:11434
model = mistral:7b
image_model = gemma3:4b

# Navidrome/Subsonic API configuration
[navidrome]
base_url = http://192.168.1.134:4533
username = username
password = password
client_name = DailyGreeting

# Literature excerpt parameters
[literature]
length = 600
padding = 2000

# Greeting message length parameters (for lognormal distribution)
[composition]
mean_length = 140
q1_length = 100
min_length = 80

# Piper TTS configuration
[tts]
model_path = .en_US-lessac-high.onnx
length_scale = 1.15

# Playback server configuration
[playback]
server_url = http://192.168.1.36:7000
